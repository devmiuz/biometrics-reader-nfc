<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/cvSwithMode"
        android:layout_width="50dp"
        android:layout_height="140dp"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="92dp"
        android:background="@drawable/bg_scan_mode"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/rlBottom"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivQrMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_scan_mode"
            android:scaleType="center"
            android:src="@drawable/vector_qr" />

        <ImageView
            android:id="@+id/ivMrzMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="center"
            android:src="@drawable/vector_scaner" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlBottom"
        android:layout_width="62dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/white_transparent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:rotation="-90"
            android:src="@drawable/vector_arrow_left_square" />

        <ImageView
            android:id="@+id/ivKeyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:rotation="90"
            android:src="@drawable/vector_keyboard" />

        <ImageView
            android:id="@+id/ivLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:rotation="90"
            android:src="@drawable/vector_lightning"
            android:tint="@android:color/white" />

    </RelativeLayout>

</FrameLayout>