<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pattern"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnLotin"
        app:layout_constraintVertical_bias="0.4"
        />

    <TextView
        android:id="@+id/btnLotin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_white_rect_oval"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:text="Lotin"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:foreground="?selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/btnKrill"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/btnKrill"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Кирилл"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:foreground="?selectableItemBackground"
        android:background="@drawable/bg_white_rect_oval"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRussian"
        />

    <TextView
        android:id="@+id/btnRussian"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Русский"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:foreground="?selectableItemBackground"
        android:background="@drawable/bg_white_rect_oval"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnEnglish"
        />

    <TextView
        android:id="@+id/btnEnglish"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="English"
        android:paddingBottom="22dp"
        android:paddingTop="22dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:foreground="?selectableItemBackground"
        android:background="@drawable/bg_white_rect_oval"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="2020"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>